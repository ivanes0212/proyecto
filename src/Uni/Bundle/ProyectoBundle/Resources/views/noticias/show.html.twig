{% extends 'uniProyectoBundle::layout.html.twig' %}


{% block cuerpo %}
    <h1>noticias</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titulonot</th>
                <td>{{ entity.tituloNot }}</td>
            </tr>
            <tr>
                <th>Textonot</th>
                <td>{{ entity.textoNot }}</td>
            </tr>
            <tr>
                <th>Fechanot</th>
                <td>{{ entity.fechaNot|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fotonot</th>
                <td>{{ entity.fotoNot }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('noticias') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
